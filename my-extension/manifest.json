{
    "manifest_version": 2,
    "name": "My Extension",
    "description": "A simple extension to demonstrate how to create a Chrome extension",
    "version": "1.0",
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
        "background": {
          "scripts": ["background.js"]
    },
    "permissions": [
      "activeTab", "tabs"
    ],
    "content_security_policy": "script-src 'self'; object-src 'self'"
}
